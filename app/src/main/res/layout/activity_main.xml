<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingRight="8dp"
    android:paddingEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            fontPath="fonts/Poppins-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/app_name"
            android:textColor="@color/defaultTextColor"
            android:id="@+id/title"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            android:padding="4dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/linkSpotify"
            android:textColor="@color/buttonTextColor"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:background="@drawable/button_background"/>

        <androidx.appcompat.widget.AppCompatTextView
            fontPath="fonts/Poppins-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:text="@string/settings"
            android:textColor="@color/defaultTextColor"
            android:id="@+id/settings"
            app:autoSizeTextType="uniform"
            android:maxLines="1"
            android:padding="4dp"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintTop_toBottomOf="@id/linkSpotify" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/settings"
            android:text="Show on LockScreen"
            android:layoutDirection="rtl"
            android:textColor="@color/defaultTextColor"
            android:id="@+id/switchAppearance"
            app:switchPadding="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/switchAppearance"
            android:text="Buttons on LockScreen clickable"
            android:layoutDirection="rtl"
            android:textColor="@color/defaultTextColor"
            android:id="@+id/switchButton"
            app:switchPadding="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>